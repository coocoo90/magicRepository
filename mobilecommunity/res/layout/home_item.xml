<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/icon_clicked"
    android:padding="@dimen/gridview_padding" >
 
    <ImageView
        android:layout_marginLeft="@dimen/captical_top_gv_icon_margin"
        android:id="@+id/capital_home_item_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" 
        android:orientation="vertical" >

        <TextView
            android:id="@+id/capital_home_item_toptxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/capital_home_item_bottomtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="省钱" />
    </LinearLayout>

</LinearLayout>